<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base para EcoMarket -->
    <style name="Theme.EcoMarket" parent="Theme.Material3.DayNight">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Colores de estado -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Colores de texto -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Barra de estado -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Barra de navegación -->
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Elevación de tarjetas -->
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        
        <!-- Tipografía -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.EcoMarket.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.EcoMarket.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.EcoMarket.Headline3</item>
        <item name="textAppearanceBody1">@style/TextAppearance.EcoMarket.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.EcoMarket.Body2</item>
    </style>
    
    <!-- Tema sin ActionBar para pantalla de bienvenida -->
    <style name="Theme.EcoMarket.NoActionBar" parent="Theme.EcoMarket">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>
    </style>
    
    <!-- Tema para pantallas de splash -->
    <style name="Theme.EcoMarket.Splash" parent="Theme.EcoMarket">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>
    </style>
    
    <!-- Tema para diálogos -->
    <style name="Theme.EcoMarket.Dialog" parent="Theme.EcoMarket">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>
    
    <!-- Tema de compatibilidad para layouts existentes -->
    <style name="Theme.Zero" parent="Theme.EcoMarket">
        <!-- Hereda todo de EcoMarket -->
    </style>
</resources>
