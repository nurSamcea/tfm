<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#FFFFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_stat_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_stats"
            android:tint="#7B5EFF"
            android:contentDescription="icono estadística"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/txt_stat_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingresos esta semana"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#222"/>

            <TextView
                android:id="@+id/txt_stat_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="134,50 €"
                android:textSize="14sp"
                android:textColor="#7B5EFF"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView> 