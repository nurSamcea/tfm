<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="2dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    android:backgroundTint="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/image_food"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:contentDescription="Product image"
            android:src="@drawable/icon_stock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/image_rounded_bg" />

        <!-- Nombre del producto -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tomates Cherry"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/image_food"
            app:layout_constraintStart_toEndOf="@id/image_food"
            app:layout_constraintEnd_toStartOf="@id/more_icon"
            android:layout_marginStart="12dp" />

        <!-- Información secundaria (stock, kilos, etc.) -->
        <TextView
            android:id="@+id/text_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="25 kg · Recolectado hoy"
            android:textColor="#666666"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/text_title"
            app:layout_constraintStart_toStartOf="@id/text_title"
            app:layout_constraintEnd_toEndOf="@id/text_title" />

        <TextView
            android:id="@+id/text_plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Receta PLUS"
            android:textColor="#B388FF"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/text_info"
            app:layout_constraintStart_toStartOf="@id/text_info"
            app:layout_constraintEnd_toEndOf="@id/text_info" />

        <!-- Icono de más opciones -->
        <ImageView
            android:id="@+id/more_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_vert"
            android:tint="#999999"
            android:contentDescription="More options"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
