<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/image_food"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:contentDescription="Product image"
            android:src="@drawable/icon_stock"
            android:background="@drawable/image_rounded_bg"
            android:clipToOutline="true" />

        <!-- Información central del producto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- Precio prominente -->
            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="€2.50"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorOrganic"
                android:fontFamily="@font/manrope_bold"
                android:layout_marginBottom="4dp" />

            <!-- Nombre del producto -->
            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tomates Cherry"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/manrope_bold"
                android:layout_marginBottom="4dp" />

            <!-- Fecha de recolección -->
            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recolectado hoy"
                android:textColor="#666666"
                android:textSize="14sp"
                android:fontFamily="@font/manrope_regular" />

        </LinearLayout>

        <!-- Columna derecha: descuento y estado -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <!-- Descuento -->
            <TextView
                android:id="@+id/text_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20% OFF"
                android:textColor="#666666"
                android:textSize="12sp"
                android:fontFamily="@font/manrope_regular"
                android:layout_marginBottom="8dp"
                android:gravity="end" />

            <!-- Estado del producto -->
            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponible"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:fontFamily="@font/manrope_bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@drawable/status_available_background"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
