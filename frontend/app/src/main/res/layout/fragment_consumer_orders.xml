<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_consumer_orders"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="8dp">

    <!-- Barra de filtros -->
    <LinearLayout
        android:id="@+id/status_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/title_filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis Pedidos"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="@font/manrope_bold"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:id="@+id/filters_container"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_search_field"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/filter_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todos"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:fontFamily="@font/manrope_bold"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <Button
                android:id="@+id/filter_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendientes"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:fontFamily="@font/manrope_bold"
                android:layout_marginStart="8dp"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <Button
                android:id="@+id/filter_in_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En curso"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:fontFamily="@font/manrope_bold"
                android:layout_marginStart="8dp"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <Button
                android:id="@+id/filter_delivered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entregados"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:fontFamily="@font/manrope_bold"
                android:layout_marginStart="8dp"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <Button
                android:id="@+id/filter_cancelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelados"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:fontFamily="@font/manrope_bold"
                android:layout_marginStart="8dp"
                style="@style/Widget.MaterialComponents.Button.TextButton" />
        </LinearLayout>
    </LinearLayout>

    <!-- Lista de pedidos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

</LinearLayout>
