<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/search_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"> <!-- Color morado del fondo -->

        <!-- Campo de búsqueda -->
        <LinearLayout
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_search_field"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                android:tint="@android:color/white" />

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Search"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Botón de filtros -->
        <ImageButton
            android:id="@+id/btn_toggle_filters"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_filters"
            android:background="@drawable/bg_search_field"
            android:tint="@android:color/white"
            android:contentDescription="Stats" />

    </LinearLayout>

    <!-- Filtros ocultos/desplegables -->
    <HorizontalScrollView
        android:id="@+id/filters_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/filters_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/filter_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distancia" />

            <CheckBox
                android:id="@+id/filter_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio" />

            <CheckBox
                android:id="@+id/filter_gluten_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sin gluten" />

            <CheckBox
                android:id="@+id/filter_eco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ecológico" />

            <CheckBox
                android:id="@+id/filter_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoría" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Scroll principal con productos y carrito -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/products_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:scrollbars="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cart_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resumen"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cart_total_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: 0,00 €"
                    android:textColor="@color/primary"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cart_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxHeight="200dp" />

            <Button
                android:id="@+id/btn_finalize_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Añadir al carrito final"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/primary"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
