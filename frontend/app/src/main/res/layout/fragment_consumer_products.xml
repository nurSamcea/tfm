<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <!-- Barra de búsqueda al estilo farmer -->
    <LinearLayout
        android:id="@+id/search_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/search_bar_background"
        android:layout_marginBottom="8dp">

        <!-- Campo de búsqueda -->
        <LinearLayout
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_search_field"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                android:tint="@android:color/white" />

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/manrope_regular"
                android:hint="Buscar productos..."
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Botón de filtros -->
        <ImageButton
            android:id="@+id/filter_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_filters"
            android:background="@drawable/bg_search_field"
            android:tint="@android:color/white"
            android:contentDescription="Filtros" />

    </LinearLayout>

    <!-- Filtros elegantes con chips -->
    <HorizontalScrollView
        android:id="@+id/filters_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:scrollbars="none"
        android:layout_marginBottom="20dp">

        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="false"
            android:padding="2dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/filter_distance"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="📍 Distancia"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                app:chipBackgroundColor="@android:color/white"
                app:chipStrokeColor="#E0E0E0"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/filter_price"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="💰 Precio"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                app:chipBackgroundColor="@android:color/white"
                app:chipStrokeColor="#E0E0E0"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/filter_gluten_free"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="🌾 Sin gluten"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                app:chipBackgroundColor="@android:color/white"
                app:chipStrokeColor="#E0E0E0"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/filter_eco"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="🌱 Ecológico"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                app:chipBackgroundColor="@android:color/white"
                app:chipStrokeColor="#E0E0E0"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/filter_category"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="📂 Categoría"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                app:chipBackgroundColor="@android:color/white"
                app:chipStrokeColor="#E0E0E0"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="16dp" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Lista de productos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/products_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:clipToPadding="false" />

    <!-- Sección del carrito elegante -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header del carrito compacto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_cart"
                    android:tint="@color/primary"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tu Carrito"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/manrope_bold" />

                <TextView
                    android:id="@+id/cart_total_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: 0,00 €"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/manrope_bold" />
            </LinearLayout>

            <!-- Lista del carrito compacta -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cart_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/modern_container_background"
                android:padding="8dp" />

            <!-- Botón de finalizar compra elegante -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_finalize_cart"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Finalizar Compra"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="24dp"
                app:backgroundTint="@color/primary"
                android:textColor="@android:color/white"
                app:elevation="4dp"
                app:icon="@drawable/ic_cart"
                app:iconGravity="textStart"
                android:fontFamily="@font/manrope_bold" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
