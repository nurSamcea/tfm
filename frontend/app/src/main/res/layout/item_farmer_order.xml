<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/order_title"
            android:text="🏪 Supermercado Día"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/manrope_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/order_date"
                android:text="Entrega: 24/06"
                android:textColor="#666666"
                android:textSize="12sp"
                android:fontFamily="@font/manrope_regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/order_total"
                android:text="Total: 21,50 €"
                android:textStyle="bold"
                android:textColor="@color/colorOrganic"
                android:textSize="14sp"
                android:fontFamily="@font/manrope_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/order_status"
                android:text="Pendiente"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:fontFamily="@font/manrope_bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@drawable/status_available_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/order_details_button"
                android:text="Ver detalles"
                android:textAllCaps="false"
                android:fontFamily="@font/manrope_bold"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:minWidth="80dp"
                android:backgroundTint="@color/colorOrganic"
                android:textColor="@android:color/white"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/btn_cancel_order"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:fontFamily="@font/manrope_bold"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="0dp"
                android:minWidth="80dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.Button" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
