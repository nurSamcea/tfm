<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Zero">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:title="Carrito de Compra"
            app:titleTextColor="@color/colorOnPrimary"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Resumen del carrito -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Zero.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resumen del Pedido"
                        android:textAppearance="@style/TextAppearance.Zero.Headline6"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/text_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total: 0.00 €"
                        android:textAppearance="@style/TextAppearance.Zero.Headline5"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Lista de productos en el carrito -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Zero.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Productos en el Carrito"
                        android:textAppearance="@style/TextAppearance.Zero.Headline6"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_cart_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_cart" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Información de entrega -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Zero.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Información de Entrega"
                        android:textAppearance="@style/TextAppearance.Zero.Headline6"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        style="@style/Widget.Zero.TextInputLayout"
                        android:hint="Dirección de entrega">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_delivery_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Calle Principal 123, Madrid"
                            android:inputType="textPostalAddress" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        style="@style/Widget.Zero.TextInputLayout"
                        android:hint="Teléfono de contacto">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="+34 600 123 456"
                            android:inputType="phone" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Método de pago -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                style="@style/Widget.Zero.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Método de Pago"
                        android:textAppearance="@style/TextAppearance.Zero.Headline6"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="12dp" />

                    <RadioGroup
                        android:id="@+id/radio_payment_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radio_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tarjeta de crédito/débito"
                            android:checked="true"
                            android:textColor="@color/textPrimary"
                            android:buttonTint="@color/colorPrimary" />

                        <RadioButton
                            android:id="@+id/radio_paypal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PayPal"
                            android:textColor="@color/textPrimary"
                            android:buttonTint="@color/colorPrimary" />

                        <RadioButton
                            android:id="@+id/radio_cash"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Efectivo contra reembolso"
                            android:textColor="@color/textPrimary"
                            android:buttonTint="@color/colorPrimary" />

                    </RadioGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Botón de confirmar compra -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_confirm_purchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmar Compra"
                android:textSize="16sp"
                android:padding="16dp"
                style="@style/Widget.Zero.Button"
                android:layout_marginBottom="16dp" />

            <!-- Información adicional -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Al confirmar tu compra, aceptas nuestros términos y condiciones. Los productos serán entregados en 24-48 horas."
                android:textAppearance="@style/TextAppearance.Zero.Caption"
                android:textColor="@color/textSecondary"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
