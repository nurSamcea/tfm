<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Productos con stock bajo"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="#222" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSuggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:elevation="2dp"
            android:padding="8dp"
            android:clipToPadding="false" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#00C853"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Buscar productos..."
                android:background="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <ImageButton
                android:id="@+id/btnFilters"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="#FFFFFF"
                android:background="@drawable/bg_circle_button"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:tint="#00C853"
                android:contentDescription="Filtrar" />
            <TextView
                android:id="@+id/textFiltersActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtros activos: [âœ“ Precio] [âœ“ Distancia]"
                android:textColor="#666"
                android:textSize="15sp"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="8dp"
            android:clipToPadding="false"
            android:layout_marginBottom="20dp" />

        <!-- Carrito de pedido (simil bottom sheet) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layout_cart_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/cart_sheet_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¥ Carrito de pedido"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#222" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/cart_sheet_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#222"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_view_full_order"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Ver pedido completo"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="20dp"
                        android:textColor="#00C853"
                        android:backgroundTint="#FFFFFF"
                        android:layout_marginEnd="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_confirm_order"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Confirmar pedido"
                        app:cornerRadius="20dp"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#00C853" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
