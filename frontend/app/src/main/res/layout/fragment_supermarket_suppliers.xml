<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Barra de búsqueda y acciones -->
    <LinearLayout
        android:id="@+id/search_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginBottom="12dp"
        android:clipToPadding="false">

        <!-- Campo de búsqueda -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_search_field"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                android:tint="@android:color/white" />

            <EditText
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Buscar productos..."
                android:background="@android:color/transparent"
                android:textColorHint="@android:color/white"
                android:paddingStart="8dp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Botón filtros -->
        <ImageButton
            android:id="@+id/btnFilters"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_search_field"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:tint="@android:color/white"
            android:contentDescription="Filtrar" />
    </LinearLayout>

    <!-- Texto filtros activos -->
    <TextView
        android:id="@+id/textFiltersActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtros activos: [✓ Precio] [✓ Distancia]"
        android:textColor="#666"
        android:textSize="15sp"
        android:layout_marginBottom="8dp" />

    <!-- Resultados de búsqueda -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerResults"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp"
        android:clipToPadding="false" />

    <!-- Carrito de pedido -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_cart_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/cart_sheet_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carrito de pedido"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:textColor="#222" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="10dp" />

            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/cart_sheet_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#222"
                    android:layout_marginBottom="16dp" />

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_full_order"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Ver pedido completo"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:cornerRadius="20dp"
                    android:textColor="#00C853"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginEnd="10dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_confirm_order"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Confirmar pedido"
                    app:cornerRadius="20dp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#00C853" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
