<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="2dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:src="@drawable/ic_product_placeholder" />

        <!-- Información del producto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nombre del producto -->
            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del producto"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/manrope_bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Precio unitario -->
            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio: 0.00 €"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/manrope_regular" />

            <!-- Información del agricultor -->
            <TextView
                android:id="@+id/product_farmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agricultor: --"
                android:textSize="10sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/manrope_regular" />

        </LinearLayout>

        <!-- Controles de cantidad y total -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Controles de cantidad -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_decrease"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="-"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:minWidth="0dp"
                    android:padding="0dp"
                    app:backgroundTint="@color/error"
                    app:cornerRadius="16dp"
                    app:iconTint="@android:color/white" />

                <TextView
                    android:id="@+id/product_quantity"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:fontFamily="@font/manrope_bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_increase"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="+"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:minWidth="0dp"
                    android:padding="0dp"
                    app:backgroundTint="@color/success"
                    app:cornerRadius="16dp"
                    app:iconTint="@android:color/white" />

            </LinearLayout>

            <!-- Total del item -->
            <TextView
                android:id="@+id/product_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: 0.00 €"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:fontFamily="@font/manrope_bold"
                android:layout_marginTop="4dp" />

            <!-- Botón de eliminar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_remove"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="Eliminar"
                android:textSize="8sp"
                android:minWidth="0dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:backgroundTint="@color/error"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_delete"
                app:iconSize="10dp"
                app:iconTint="@android:color/white"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>