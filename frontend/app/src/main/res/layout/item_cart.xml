<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    style="@style/Widget.Zero.CardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/image_product"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_product_placeholder"
            android:scaleType="centerCrop"
            android:background="@color/colorDivider"
            android:layout_marginEnd="12dp"
            android:contentDescription="Imagen del producto" />

        <!-- Información del producto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/text_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Producto"
                android:textAppearance="@style/TextAppearance.Zero.Subtitle1"
                android:textColor="@color/textPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                tools:text="Tomates Ecológicos" />

            <TextView
                android:id="@+id/text_product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción del producto"
                android:textAppearance="@style/TextAppearance.Zero.Caption"
                android:textColor="@color/textSecondary"
                android:layout_marginBottom="4dp"
                tools:text="Tomates frescos de cultivo ecológico" />

            <TextView
                android:id="@+id/text_unit_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.50 €/kg"
                android:textAppearance="@style/TextAppearance.Zero.Body2"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                tools:text="2.50 €/kg" />

        </LinearLayout>

        <!-- Controles de cantidad -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad"
                android:textAppearance="@style/TextAppearance.Zero.Caption"
                android:textColor="@color/textSecondary"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_decrease"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="-"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:strokeColor="@color/colorPrimary"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/text_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textAppearance="@style/TextAppearance.Zero.Subtitle1"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="12dp"
                    tools:text="2" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_increase"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="+"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:strokeColor="@color/colorPrimary"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Precio total y botón eliminar -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/text_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.00 €"
                android:textAppearance="@style/TextAppearance.Zero.Subtitle1"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                tools:text="5.00 €" />

            <ImageButton
                android:id="@+id/button_remove"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/colorError"
                android:contentDescription="Eliminar del carrito" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 