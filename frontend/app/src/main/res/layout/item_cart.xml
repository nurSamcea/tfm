<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/image_product"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:contentDescription="Product image"
            android:src="@drawable/icon_stock"
            android:background="@drawable/image_rounded_bg"
            android:clipToOutline="true" />

        <!-- Información del producto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="5dp">

            <TextView
                android:id="@+id/text_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Producto"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/manrope_bold"
                android:layout_marginBottom="4dp"
                tools:text="Tomates Ecológicos" />

            <TextView
                android:id="@+id/text_unit_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.50 €/kg"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                tools:text="2.50 €/kg" />

        </LinearLayout>

        <!-- Controles de cantidad -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginEnd="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_decrease"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:text="-"
                android:textSize="14sp"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@drawable/ic_remove"
                app:iconSize="16dp"
                app:iconTint="@color/primary"
                app:backgroundTint="@color/surface"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp" />

            <TextView
                android:id="@+id/text_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginHorizontal="8dp"
                android:minWidth="20dp"
                android:gravity="center"
                tools:text="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_increase"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:text="+"
                android:textSize="14sp"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@drawable/ic_add"
                app:iconSize="16dp"
                app:iconTint="@color/primary"
                app:backgroundTint="@color/surface"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp" />

        </LinearLayout>

        <!-- Precio total y botón eliminar -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/text_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.00 €"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                tools:text="5.00 €" />

            <ImageButton
                android:id="@+id/button_remove"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/error"
                android:contentDescription="Eliminar del carrito" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 