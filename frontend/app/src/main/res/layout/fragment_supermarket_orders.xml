<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_supermarket_orders"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="8dp">

    <!-- Título principal -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pedidos"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:fontFamily="@font/manrope_bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Tabs para Proveedores y Clientes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_search_field"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/tab_suppliers"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Proveedores"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:fontFamily="@font/manrope_bold"
            android:background="@drawable/tab_selected_background"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <Button
            android:id="@+id/tab_clients"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Clientes"
            android:textAllCaps="false"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/manrope_bold"
            android:background="@android:color/transparent"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

    </LinearLayout>

    <!-- Filtros de estado (dinámicos según el tab seleccionado) -->
    <LinearLayout
        android:id="@+id/status_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/title_filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filtros:"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/manrope_bold"
            android:layout_marginEnd="12dp" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/filters_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/filter_all"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:text="Todos"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/manrope_bold"
                    android:background="@drawable/filter_selected_background"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />

                <Button
                    android:id="@+id/filter_pending"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:text="Pendiente"
                    android:textAllCaps="false"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/manrope_regular"
                    android:background="@drawable/filter_background"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />

                <Button
                    android:id="@+id/filter_in_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:text="En Curso"
                    android:textAllCaps="false"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/manrope_regular"
                    android:background="@drawable/filter_background"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />

                <Button
                    android:id="@+id/filter_delivered"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:text="Entregado"
                    android:textAllCaps="false"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/manrope_regular"
                    android:background="@drawable/filter_background"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />

                <Button
                    android:id="@+id/filter_cancelled"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Cancelado"
                    android:textAllCaps="false"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/manrope_regular"
                    android:background="@drawable/filter_background"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <!-- RecyclerView para mostrar los pedidos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="8dp" />

</LinearLayout>