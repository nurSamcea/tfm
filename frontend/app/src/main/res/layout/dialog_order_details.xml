<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background">

    <!-- Header con título -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Detalles del Pedido"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:fontFamily="@font/manrope_bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_close"
            app:iconTint="@color/gray_600" />

    </LinearLayout>

    <!-- Información básica -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID del Pedido:"
            android:textSize="14sp"
            android:textColor="@color/gray_600"
            android:fontFamily="@font/manrope_medium" />

        <TextView
            android:id="@+id/text_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#12345"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:fontFamily="@font/manrope_bold"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Estado del pedido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado:"
            android:textSize="14sp"
            android:textColor="@color/gray_600"
            android:fontFamily="@font/manrope_medium" />

        <TextView
            android:id="@+id/text_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En Curso"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/status_in_progress"
            android:fontFamily="@font/manrope_bold"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Información de comprador y vendedor -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comprador:"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:fontFamily="@font/manrope_medium" />

            <TextView
                android:id="@+id/text_buyer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miguel Torres"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:fontFamily="@font/manrope_bold"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendedor:"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:fontFamily="@font/manrope_medium" />

            <TextView
                android:id="@+id/text_seller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="María García"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:fontFamily="@font/manrope_bold"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Lista de productos -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Productos:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:fontFamily="@font/manrope_bold"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_order_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:nestedScrollingEnabled="false" />

    <!-- Total -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:fontFamily="@font/manrope_bold" />

        <TextView
            android:id="@+id/text_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.35 €"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:fontFamily="@font/manrope_bold" />

    </LinearLayout>

    <!-- Fecha de creación -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de creación:"
        android:textSize="14sp"
        android:textColor="@color/gray_600"
        android:fontFamily="@font/manrope_medium"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/text_created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="06/09/2025 23:46"
        android:textSize="14sp"
        android:textColor="@color/gray_700"
        android:fontFamily="@font/manrope_regular"
        android:layout_marginBottom="16dp" />

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_order"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar Pedido"
            android:textColor="@color/error"
            android:layout_marginEnd="8dp"
            app:strokeColor="@color/error"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_deliver_order"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marcar como Entregado"
            android:backgroundTint="@color/success"
            app:cornerRadius="8dp" />

    </LinearLayout>

</LinearLayout>
