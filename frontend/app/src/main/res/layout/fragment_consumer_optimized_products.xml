<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <!-- Header con informaci贸n de ubicaci贸n -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- T铆tulo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Productos Optimizados"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/manrope_bold"
                android:layout_marginBottom="8dp" />

            <!-- Informaci贸n de ubicaci贸n -->
            <TextView
                android:id="@+id/location_info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="@font/manrope_regular"
                android:layout_marginBottom="12dp"
                android:visibility="gone" />

            <!-- Botones de control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_refresh"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Actualizar"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:fontFamily="@font/manrope_regular"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/button_secondary_background"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <Button
                    android:id="@+id/btn_settings"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Configurar"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:fontFamily="@font/manrope_regular"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_primary_background" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Barra de progreso -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:visibility="gone" />

    <!-- Mensaje de estado -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:text="Iniciando optimizaci贸n..."
        android:textSize="14sp"
        android:fontFamily="@font/manrope_regular"
        android:gravity="center"
        android:visibility="visible" />

    <!-- Lista de productos optimizados -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_products"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="8dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

    <!-- Estado vac铆o -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="32dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_location"
            android:contentDescription="Sin productos"
            android:alpha="0.3"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No hay productos optimizados"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:fontFamily="@font/manrope_bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intenta ajustar el rango de b煤squeda o verifica tu ubicaci贸n"
            android:textSize="14sp"
            android:textColor="#999999"
            android:fontFamily="@font/manrope_regular"
            android:gravity="center" />

    </LinearLayout>

    <!-- Informaci贸n adicional -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Los productos est谩n ordenados por optimizaci贸n de distancia, precio y sostenibilidad"
        android:textSize="12sp"
        android:textColor="#999999"
        android:fontFamily="@font/manrope_regular"
        android:gravity="center"
        android:background="@drawable/rounded_background_light"
        android:padding="12dp"
        android:layout_margin="16dp" />

</LinearLayout>









