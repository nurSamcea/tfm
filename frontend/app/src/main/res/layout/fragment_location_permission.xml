<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Icono de ubicación -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_location_permission"
            android:contentDescription="Icono de ubicación"
            android:background="@drawable/circle_background_primary"
            android:padding="24dp" />

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicación"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/manrope_bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/tv_permission_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Para mostrarte los productores y supermercados más cercanos, necesitamos acceder a tu ubicación."
            android:textSize="16sp"
            android:textColor="#666666"
            android:fontFamily="@font/manrope_regular"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Beneficios -->
        <TextView
            android:id="@+id/tv_permission_benefits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Encuentra productores locales\n• Calcula distancias automáticamente\n• Optimiza tus rutas de compra"
            android:textSize="14sp"
            android:textColor="#888888"
            android:fontFamily="@font/manrope_regular"
            android:gravity="start"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/rounded_background_light"
            android:padding="16dp" />

        <!-- Botón principal -->
        <Button
            android:id="@+id/btn_request_location_permission"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Activar ubicación"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/manrope_bold"
            android:textColor="@android:color/white"
            android:background="@drawable/button_primary_background"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

        <!-- Botón secundario -->
        <Button
            android:id="@+id/btn_skip_location"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Omitir por ahora"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:fontFamily="@font/manrope_regular"
            android:textColor="#666666"
            android:background="@android:color/transparent"
            android:layout_marginBottom="16dp" />

        <!-- Información adicional -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puedes cambiar estos permisos en cualquier momento desde la configuración de la aplicación."
            android:textSize="12sp"
            android:textColor="#999999"
            android:fontFamily="@font/manrope_regular"
            android:gravity="center"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>
</ScrollView>

