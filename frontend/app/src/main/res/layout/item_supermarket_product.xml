<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:src="@drawable/ic_product_placeholder" />

        <!-- Información del producto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nombre del producto -->
            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del producto"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/manrope_bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Chips de características -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_eco"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Ecológico"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="@color/success"
                    app:chipCornerRadius="12dp"
                    android:visibility="gone" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_sustainable"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Sostenible"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="@color/primary"
                    app:chipCornerRadius="12dp"
                    android:layout_marginStart="4dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Información de precio y stock -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Precio: 0.00 €"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/manrope_medium" />

                <TextView
                    android:id="@+id/product_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock: 0"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/manrope_regular" />

            </LinearLayout>

            <!-- Información de distancia y agricultor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/product_distance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Distancia: -- km"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/manrope_regular" />

                <TextView
                    android:id="@+id/product_farmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agricultor: --"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/manrope_regular" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Agregar"
                android:textSize="10sp"
                android:minWidth="0dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:backgroundTint="@color/primary"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_add"
                app:iconSize="12dp"
                app:iconTint="@android:color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_details"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"
                android:text="Detalles"
                android:textSize="10sp"
                android:minWidth="0dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:backgroundTint="@color/secondary"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_info"
                app:iconSize="12dp"
                app:iconTint="@android:color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_contact_farmer"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"
                android:text="Contactar"
                android:textSize="10sp"
                android:minWidth="0dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:backgroundTint="@color/accent"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_info"
                app:iconSize="12dp"
                app:iconTint="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
