<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <!-- Header del ticket -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <TextView
            android:text="ðŸ§¾ TICKET DE COMPRA"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/manrope_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- InformaciÃ³n del pedido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/txt_order_id"
            android:text="Pedido #12345"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/manrope_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_seller_name"
            android:text="Vendedor: Supermercado DÃ­a"
            android:textSize="12sp"
            android:textColor="#666666"
            android:fontFamily="@font/manrope_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/txt_order_date"
            android:text="Fecha: 24/06/2024"
            android:textSize="12sp"
            android:textColor="#666666"
            android:fontFamily="@font/manrope_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_order_status"
            android:text="Estado: En curso"
            android:textSize="12sp"
            android:textColor="#666666"
            android:fontFamily="@font/manrope_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Lista de productos -->
    <TextView
        android:text="PRODUCTOS:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:fontFamily="@font/manrope_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_order_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:nestedScrollingEnabled="false" />

    <!-- LÃ­nea separadora -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="12dp" />

    <!-- Total -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:text="TOTAL:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/manrope_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_total_amount"
            android:text="21,50 â‚¬"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorOrganic"
            android:fontFamily="@font/manrope_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- InformaciÃ³n adicional -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/txt_payment_method"
            android:text="MÃ©todo de pago: Efectivo"
            android:textSize="12sp"
            android:textColor="#666666"
            android:fontFamily="@font/manrope_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_delivery_address"
            android:text="DirecciÃ³n: Calle Principal 123"
            android:textSize="12sp"
            android:textColor="#666666"
            android:fontFamily="@font/manrope_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- BotÃ³n cerrar -->
    <Button
        android:id="@+id/btn_close_dialog"
        android:text="Cerrar"
        android:textAllCaps="false"
        android:fontFamily="@font/manrope_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorOrganic"
        style="@style/Widget.MaterialComponents.Button" />

</LinearLayout>
