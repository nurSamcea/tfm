<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_supermarket_search_products"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="4dp">

    <!-- Header con título -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="4dp">

        <!-- Campo de búsqueda - se expande para ocupar el espacio disponible -->
        <LinearLayout
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/search_bar_background"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                android:tint="@color/primary"
                android:layout_marginEnd="12dp" />

            <EditText
                android:id="@+id/search_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:hint="Buscar productos de agricultores..."
                android:textColorHint="@color/text_secondary"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:background="@null"
                android:inputType="text" />

        </LinearLayout>

        <!-- Botón de filtros -->
        <ImageButton
            android:id="@+id/filter_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_filters"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/primary"
            android:contentDescription="Filtros" />

        <!-- Botón de ordenar -->
        <ImageButton
            android:id="@+id/sort_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_filters"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/primary"
            android:contentDescription="Ordenar" />
    </LinearLayout>

    <!-- Chips de filtros -->
    <HorizontalScrollView
        android:id="@+id/filters_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scrollbars="none"
        android:visibility="gone">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:singleSelection="false"
            app:selectionRequired="false"
            android:padding="2dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_precio_bajo"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Precio bajo"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                app:chipBackgroundColor="@android:color/white"
                app:chipStrokeColor="#E0E0E0"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_distancia_cerca"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Cerca"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                app:chipBackgroundColor="@android:color/white"
                app:chipStrokeColor="#E0E0E0"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_disponible"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Disponible"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                app:chipBackgroundColor="@android:color/white"
                app:chipStrokeColor="#E0E0E0"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_sostenible"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Sostenible"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                app:chipBackgroundColor="@android:color/white"
                app:chipStrokeColor="#E0E0E0"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_eco"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Ecológico"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                app:chipBackgroundColor="@android:color/white"
                app:chipStrokeColor="#E0E0E0"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="16dp" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Lista de productos disponibles (mitad superior) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_products"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="4dp"
            android:scrollbars="vertical" />

    </LinearLayout>

    <!-- Separador -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary"
        android:alpha="0.3" />

    <!-- Carrito de compras (mitad inferior) -->
    <LinearLayout
        android:id="@+id/cart_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/background_light">

        <!-- Header del carrito -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@color/primary"
            android:alpha="0.1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Carrito de compras"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryVariant"
                android:fontFamily="@font/manrope_bold" />

            <TextView
                android:id="@+id/cart_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 productos"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/manrope_regular" />

        </LinearLayout>

        <!-- Lista del carrito -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_cart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="4dp"
            android:scrollbars="vertical" />

        <!-- Footer del carrito con total y botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/cart_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: 0.00 €"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:fontFamily="@font/manrope_bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_clear_cart"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Vaciar carrito"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp"
                    app:backgroundTint="@color/error"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/ic_delete"
                    app:iconSize="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_checkout"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Realizar pedido"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/ic_cart"
                    app:iconSize="16dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
